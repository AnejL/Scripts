#
# Reload sxhkd
#

super + Escape
	pkill -USR1 -x sxhkd
#
# Handle laptop's functions
#

XF86AudioRaiseVolume
	amixer set Master 2+ && refbar

XF86AudioLowerVolume
	amixer set Master 2- && refbar

XF86AudioMute
	amixer set Master toggle && refbar

XF86AudioMicMute
	amixer set Capture toggle

XF86MonBrightnessUp
	xbacklight -inc 15

XF86MonBrightnessDown
	xbacklight -dec 10

XF86Launch1
	$SCRIPTDIR/synaptics.sh
	
XF86ScreenSaver
	$SCRIPTDIR/lock.sh

XF86Sleep
	$SCRIPTDIR/lock.sh 

XF86AudioPrev
	cmus-remote -r

XF86AudioNext
	cmus-remote -n

XF86AudioPlay
	cmus-remote -u


#
# non-wm specific shortcuts
#

#@Bližnjice za preklapljanje zaslonov

#@@Uporabi vgrajen prenosnikov display
super + shift + i
	xrandr --output eDP1 --primary --auto --output HDMI2 --off

#@@Uporabi DisplayPort
super + shift + o
	xrandr --output DP1 --primary --auto --output LVDS1 --off

#@@Podvoji display
super + shift + p
	xrandr --output DP1 --primary --auto --output DP1 --same-as LVDS1 --scale-from 1366x768

#
# scripts installed to /usr/local/bin
#

#@Pogoste funkcije

alt + b
	btwiz

#@@Izberi ameriško ali slovensko tipkovnico
super + shift + k
	setlayout

#
# scripts in their home folder
#

#@@Izberi wifi omrežje
super + shift + n
	$SCRIPTDIR/networkmanager/nm.sh && refbar

#@@Powersaving/High performance
super + shift + b
	$SCRIPTDIR/powersaving.sh

#@Ugašanje in spanje
#@@Zakleni računalnik in ga daj spat
super + shift + s
	$SCRIPTDIR/lock.sh sleep

#@@Zakleni računalnik
super + x
	$SCRIPTDIR/lock.sh 

super + g
	$SCRIPTDIR/creds.sh

#@@Ugasni računalnik
super + ctrl + k
	systemctl poweroff

#@@Restartaj računalnik
super + ctrl + l
	systemctl reboot

@Print
	flameshot gui
