#
# Reload sxhkd
#

alt + Escape
	pkill -USR1 -x sxhkd

#
# Non-wm specific shortcuts
#

alt + {Insert,Delete} 
	pactl set-sink-volume @DEFAULT_SINK@ {+,-}5% && refbar

alt + shift + Delete
	pactl set-sink-mute   @DEFAULT_SINK@ toggle && refbar

alt + shift + Insert
	pactl set-source-mute @DEFAULT_SOURCE@ toggle

alt + ctrl + {k,l,s}
	systemctl {poweroff, reboot, suspend}

#
# Scripts in my HOME folder
#

alt + shift + i
	$SCRIPTDIR/chooseide.sh

alt + g
	$SCRIPTDIR/creds.sh

alt + x
	$SCRIPTDIR/lock.sh

alt + s
	$SCRIPTDIR/lock_suspend.sh

alt + shift + n
	$SCRIPTDIR/networkmanager/nm.sh && refbar

alt + shift + k
	setlayout

shift + F1
	soundmgr switch

@Print
	flameshot gui
