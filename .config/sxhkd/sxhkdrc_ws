#
# Reload sxhkd
#

alt + Escape
	pkill -USR1 -x sxhkd

#
# Non-wm specific shortcuts
#

alt + {Insert,Delete} 
	amixer set Master 2{+,-} && refbar

alt + shift + Delete
	amixer set Master toggle && refbar

alt + ctrl + {k,l}
	systemctl {poweroff, reboot}

#
# Scripts in my HOME folder
#

alt + shift + i
	$SCRIPTDIR/chooseide.sh

alt + g
	$SCRIPTDIR/creds.sh

alt + x
	$SCRIPTDIR/lock.sh

alt + shift + s
	$SCRIPTDIR/lock.sh sleep

alt + shift + n
	$SCRIPTDIR/networkmanager/nm.sh && refbar

alt + shift + k
	setlayout

shift + F1
	$SCRIPTDIR/alsacontrol.sh && refbar

@Print
	flameshot gui
